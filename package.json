{
  "name": "repoweaver",
  "version": "1.0.0",
  "description": "A GitHub App that skillfully weaves multiple templates together to create and update repositories with intelligent merge strategies",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/app.ts",
    "start": "node dist/app.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "cli:build": "tsc && chmod +x dist/cli.js",
    "cli:dev": "ts-node src/cli.ts",
    "mobile:install": "cd mobile && npm install",
    "mobile:start": "cd mobile && npm start",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android",
    "mobile:web": "cd mobile && npm run web",
    "mobile:build": "cd mobile && npm run build"
  },
  "keywords": [
    "git",
    "template",
    "repository",
    "weaving",
    "github-app",
    "automation",
    "templates",
    "merge"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@octokit/auth-app": "^6.0.1",
    "commander": "^14.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "sqlite3": "^5.1.6",
    "simple-git": "^3.28.0"
  }
}
