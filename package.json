{
	"name": "repoweaver",
	"version": "1.0.0",
	"description": "A GitHub App that skillfully weaves multiple templates together to create and update repositories with intelligent merge strategies",
	"main": "dist/app.js",
	"scripts": {
		"build": "tsc",
		"dev": "ts-node src/app.ts",
		"start": "node dist/app.js",
		"lint": "eslint src/**/*.ts",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"cli:build": "tsc && chmod +x dist/cli.js",
		"cli:dev": "ts-node src/cli.ts",
		"mobile:install": "cd mobile && npm install",
		"mobile:start": "cd mobile && npm start",
		"mobile:ios": "cd mobile && npm run ios",
		"mobile:android": "cd mobile && npm run android",
		"mobile:web": "cd mobile && npm run web",
		"mobile:build": "cd mobile && npm run build"
	},
	"keywords": [
		"git",
		"template",
		"repository",
		"weaving",
		"github-app",
		"automation",
		"templates",
		"merge"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/node": "^20.19.8",
		"@typescript-eslint/eslint-plugin": "^8.37.0",
		"@typescript-eslint/parser": "^8.37.0",
		"eslint": "^9.31.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^2.1.3",
		"zod": "^4.1.12"
	},
	"dependencies": {
		"@octokit/auth-app": "^8.0.2",
		"@octokit/rest": "^22.0.0",
		"body-parser": "^2.2.0",
		"commander": "^14.0.0",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"simple-git": "^3.28.0",
		"sqlite3": "^5.1.7"
	}
}
